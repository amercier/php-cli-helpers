{
	"name": "amercier/cli-helpers",
	"description": "Utility classes to write PHP command-line scripts",
	"type": "library",
	"keywords": [
		"cli",
		"helpers",
		"command",
		"line",
		"command-line",
		"utility",
		"utilities"
	],
	"homepage": "https://github.com/amercier/php-cli-helpers",
	"license": "MIT",
	"require": {
		"php": ">=5.3.2"
	},
	"autoload": {
		"psr-0": {
			"Cli\\": "src/"
		}
	},
	"include-path": [
		"src/"
	],
  "repositories": [
    {
      "type": "pear",
      "url": "http://pear.php.net"
    }
  ],
	"require": {
	},
	"require-dev": {
		"phpunit/phpunit": "3.*",
    "satooshi/php-coveralls": ">=0.6.1",
    "pear-pear/Console_Getopt": ">=1.3.1"
	}
}
